{{!

    @template shezar_form/group_buttons

    This template generates shezar form button group.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
     * form_item_template string this template, used for dynamic partials
     * name__xxxx bool true where xxxx is the name of this form item
     * name string name of this item
     * id string id of this item
     * items array contained form items included via dynamic partial from form_item_template

    Example context (json):
      {"form_item_template":"shezar_form\/group_buttons","name__actionbuttonsgroup":true,"name":"actionbuttonsgroup","id":"tfiid_actionbuttonsgroupshezar_form_form_testform_element_compilation","items":[{"form_item_template":"shezar_form\/element_action_button","name__submitbutton":true,"name":"submitbutton","id":"tfiid_submitbutton_shezar_form_form_testform_element_compilation","frozen":false,"value":"Save changes","formnovalidate":false,"errors_has_items":false,"errors":[],"helphtml":false,"elementtype":"shezar_form\\form\\element\\action_button","elementid":"tfiid_submitbutton_shezar_form_form_testform_element_compilation","elementclassification":"element"}],"errors_has_items":false,"errors":[],"helphtml":false,"elementtype":"shezar_form\\form\\group\\buttons","elementid":"tfiid_actionbuttonsgroupshezar_form_form_testform_element_compilation","elementclassification":"group"}
}}
<div class="tf_group shezar_form_group_buttons clearfix">
    {{#items}}
        <div data-item-classification="{{elementclassification}}"
             data-element-type="{{elementtype}}"
             data-element-id="{{elementid}}"
             data-element-template="{{form_item_template}}"
             data-element-frozen="{{frozen}}"
             {{#amdmodule}} data-element-amd-module="{{.}}"{{/amdmodule}}
             class="nostyles">
        {{> &&form_item_template}}
        </div>
    {{/items}}
    {{> shezar_form/help_button}}
</div>
